<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Dashboard</title>
</head>

<body>
    <% var r=student.rollnumber;
        var n=student.name;
        var s=student.marks;
    %>
    <nav class ="navbar navbar-light bg-dark"style='font-family:"Times New Roman",Times, serif; font-size:200%'>
		<div class="container-fluid">
		  <img src="https://logos-world.net/wp-content/uploads/2022/01/Nagarro-Symbol.png" style="width: 70px;" alt="logo">
			<h1 class="text-light primary py-3" style='font-family:"Times New Roman",Times, serif; font-size:100%'><b>Result Managment System</b></h1>
			<div class ="d-flex">
			 <a href="/teacher/logout"> <button type="button" class="btn btn-danger ">Logout</button></a>&nbsp;
			  <a href="/teacher/dashboard" ><button type="button" class="btn btn-warning">Go Back</button></a>
			</div>
		</div>
			
		   
		</div>
	  </nav>

<main class="primary-background banner-background"
		style="padding-bottom: 90px;padding-top: 15px;">
	<div class="container">
		
		<div class="col-md-6 offset-md-3"style='font-family:"Times New Roman",Times, serif; font-size:100%'>
			
			<div class="card">
				<div class="card-header text-center "style='font-family:"Times New Roman",Times, serif; font-size:150%'>
					<span class="fa fa-user-plus fa-3x"></span><br> <b>Edit Student Data</b>
				</div>

				<div class="card-body">
					<form action="/teacher/editstudent"  method="POST">
						
						<div class="form-group" style="margin-top: 5px;">
							<label for="Email1"><b>Roll Number</b></label> 
                            <input style="margin-top: 5px;" type="text"
								class="form-control" 
								 placeholder="enter student roll number"
								required value="<%=r%>" name='rollnumber' readonly="readonly">
						</div>
						<div class="form-group" style="margin-top: 5px;">
							<label for="name"><b>Name</b></label> <input style="margin-top: 5px;" type="text"
								class="form-control" id="name"
								placeholder="enter student name" required="required" value="<%=n%>" name='name'>
						</div>
						<div class="form-group"  style="margin-top: 5px;">
							<label for="Password1"><b>Date of Birth</b></label>
                             <input style="margin-top: 5px;" type="date"
								class="form-control"
								placeholder="dd-mm-yyyy" required  name='dob'>
						</div>
						
						<div class="form-group"  style="margin-top: 5px;">
							<label for="Password1"><b>Score</b></label> 
                            <input style="margin-top: 5px;" type="number"
								class="form-control"
								placeholder="enter score obtained by student" required value="<%=s%>" name='marks'>
						</div>
                        <div style="margin-top: 10px; text-align: center;">
                            <button id="button1" type="submit" class="btn btn-primary">Add</button>
                            <button type="reset" class="btn btn-danger" style="margin-left: 6px;">Clear</button>
                        </div>
						



					</form>

				</div>


			</div>



		</div>
	</div>
	</main>

</body>